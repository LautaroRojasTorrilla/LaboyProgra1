#include <stdio.h>
#include <stdlib.h>

typedef struct {
char nombre[20];
int nota;
}eAlumno;

int main(void) {
	setbuf(stdout, NULL);

	eAlumno alumno;

	strcpy(alumno.nombre, "matias");
	alumno.nota = 7;

	eAlumno* puntero;

	puntero = &alumno;

	//primero me muevo al valor *puntero y despues al campo .nota.
	//Por eso son importantes los par√©ntesis y el asterisco.
	printf("%d\n%s\n", (*puntero).nota, (*puntero).nombre);

//	int peso = sizeof(*puntero);
//	printf("%d\n", peso);

	return EXIT_SUCCESS;
}
