#include <stdio.h>
#include <stdlib.h>

#define CANTIDAD 3
#define LIBRE 0
#define OCUPADO 1

typedef struct{
	int legajo;
	float salario;
	char sexo;
	char nombre[31];
	int estado;
}eEmpleado;

int main(void) {
	setbuf(stdout,NULL);

	eEmpleado empleado;
	eEmpleado empleados[CANTIDAD];
	int i;

	for(i=0; i<CANTIDAD; i++){
		estado[i] = LIBRE;
	}


	printf("Legajo: ");
	scanf("%d", &empleado.legajo);

	printf("Nombre: ");
	fflush(stdin);
	scanf("%[^\n]", empleado.nombre);

	printf("Sexo: ");
	fflush(stdin);
	scanf("%c", &empleado.sexo);

	printf("Salario: ");
	scanf("%f", &empleado.salario);

	empleado.estado = OCUPADO;

	for(i=0; i<CANTIDAD; i++){
		if (estado[i] == LIBRE) {
			empleados.legajo[i] = (i+1);

			printf("Nombre: ");
			fflush(stdin);
			scanf("%[^\n]", nombre[i]);

			printf("Sexo: ");
			fflush(stdin);
			scanf("%c", &sexo[i]);

			printf("Salario: ");
			scanf("%f", &salario[i]);
		}
	}


	for(i=0; i<80; i++){
		printf("-")
	}

	printf("\n\nImprimo los datos del array de empleados.");



	printf("Imprimo los datos de un %cnico empleado", 163);

	printf("Legajo\tNombre\t\tSexo\tSalario\n\n");

	printf("%d\t%s\t\t%c\t%.2f\n\n", empleado.legajo, empleado.nombre, empleado.sexo, empleado.salario);

	return EXIT_SUCCESS;
}
