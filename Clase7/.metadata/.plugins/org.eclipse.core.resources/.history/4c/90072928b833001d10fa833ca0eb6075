#include <stdio.h>
#include <stdlib.h>

#define CANTIDAD 100

int main(void) {
	setbuf(stdout,NULL);

	int legajo[CANTIDAD];
	float salario[CANTIDAD];
	char sexo [CANTIDAD];
	char nombre[CANTIDAD][31];
	int i;

	for(i=0; i<CANTIDAD; i++)
	{
		legajo[i] = (i+1);

		printf("Nombre: ");
		fflush(stdin);
		scanf("%[^\n]", nombre[i]);
	}

	return EXIT_SUCCESS;
}
