int ValidacionMaxMin(char *mensaje, int minimo, int maximo)
{
	int numero;

	do{
		printf("%s", mensaje);
		scanf("%d", &numero);
	}
	while(numero > maximo || numero < minimo || minimo > maximo);

	return numero;
}

float GetFloat(char *mensaje)
{
	float numero;

	printf("%s", mensaje);
	scanf("%f", &numero);

	return numero;
}
