#include <stdio.h>
#include <stdlib.h>

float getFloat(char *mensaje);
void imprimirFloat (float *numero);

int main(void) {
	float flotante = 1.25;

	imprimirFloat(flotante);

	return EXIT_SUCCESS;
}

float getFloat(char *mensaje)
{
	float numero;

	printf("%s", mensaje);
	scanf("%f", &numero);

	return numero;
}

void imprimirFloat (float *numero)
{
	printf("El n√∫mero flotante es: \f", numero);
}
