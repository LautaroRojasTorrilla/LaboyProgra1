#include <stdio.h>
#include <stdlib.h>

int siEsPar(int numero);

int main(void) {
	setbuf(stdout, NULL);

	int esONoPar = 5;

	if(siEsPar(esONoPar) == 0)
	{
		puts("no es par");
	}
	else
	{
		puts("es par.");
	}

	return EXIT_SUCCESS;
}

int siEsPar(int numero)
{
	int retorno = 0;

	if (numero % 2 == 0) {
		retorno = 1;
	}

	return retorno;
}
