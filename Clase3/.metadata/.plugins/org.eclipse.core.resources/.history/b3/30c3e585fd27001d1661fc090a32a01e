#include <stdio.h>
#include <stdlib.h>

int siEsPar(numero);

int main(void) {
	setbuf(stdout, NULL);
	puts("!!!Hello World!!!"); /* prints !!!Hello World!!! */
	return EXIT_SUCCESS;
}

int siEsPar(numero)
{
	int retorno = 1;
	if (numero/2 == 0) {
		retorno = 0;
	}
	return retorno;
}
