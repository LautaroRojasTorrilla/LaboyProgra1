#include <stdio.h>
#include <stdlib.h>

float getFloat(char *mensaje);

int main(void) {
	puts("!!!Hello World!!!"); /* prints !!!Hello World!!! */
	return EXIT_SUCCESS;
}

float getFloat(char *mensaje)
{
	float numero;

	printf("%s", mensaje);
	scanf("%f", &numero);

	return numero;
}
